    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#2aaae6" />
                    <corners android:radius="4dp" />
                    <stroke android:color="#1d628b" android:width="1dp"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="4dp" />
