<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/pad_20dp">

        <Utils.AppTextView
            style="@style/configActivityText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:paddingBottom="@dimen/pad_15dp"
            android:text="@string/numberOfSessionsView" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="start"
            android:paddingBottom="@dimen/pad_20dp">

            <SeekBar
                android:id="@+id/sessionsRangeSeekBar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/pad_15dp"
                android:max="4"
                android:progress="0" />

            <Utils.AppTextView
                android:id="@+id/numberOfSessionsChoice"
                style="@style/configActivityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/numberOfSessionsChoiceView" />

        </LinearLayout>

    </LinearLayout>

</merge>