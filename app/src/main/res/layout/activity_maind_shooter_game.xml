<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.first.kaganmoshe.brainy.MindShooter.MindShooterGameActivity"
    android:background="#FF7A7A7A"
    android:id="@+id/gameShooterFL">


    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/intent"
        android:layout_gravity="center"
        android:src="@drawable/ic_kavent" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/balloon"
        android:layout_gravity="center_horizontal|top"
        android:src="@drawable/balloon_blue" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shoot"
        android:id="@+id/shootBtn"
        android:layout_gravity="center_horizontal|bottom" />

</FrameLayout>
