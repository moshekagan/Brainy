<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:weightSum="20"
    tools:context=".GuessTheNumberGameActivity">

    <TextView
        android:text="@string/guess_number_title"
        android:id="@+id/guessNumberTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/start_margin_layout"
        android:layout_marginStart="@dimen/start_margin_layout"
        style="@style/guessTheNumberTitle"
        android:layout_weight="0" />

    <TextView
        android:id="@+id/guessNumberRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/start_margin_layout"
        android:layout_marginStart="@dimen/start_margin_layout"
        android:layout_marginTop="20dp"
        android:text="@string/guess_number_headline"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_weight="0" />

    <LinearLayout
        android:background="@drawable/input_field"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/start_margin_layout"
        android:layout_marginStart="@dimen/start_margin_layout"
        android:layout_marginEnd="@dimen/end_margin_layout"
        android:layout_marginRight="@dimen/end_margin_layout"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:id="@+id/guessInput"
            android:layout_width="150sp"
            android:layout_weight="4"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:textSize="20sp" />

        <Button
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="right"
            android:id="@+id/backspaceButton"
            android:onClick="gameButtonClicked"
            android:stateListAnimator="@null"
            android:background="@drawable/ic_removeicon"/>
    </LinearLayout>

    <TextSwitcher
        android:id="@+id/outputText"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginStart="@dimen/start_margin_layout"
        android:layout_marginLeft="@dimen/start_margin_layout"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="@dimen/start_margin_layout"
        android:layout_marginStart="@dimen/start_margin_layout"
        android:layout_marginEnd="@dimen/end_margin_layout"
        android:layout_marginRight="@dimen/end_margin_layout"
        android:layout_weight="13"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                style="@style/gameButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button1"
                android:onClick="gameButtonClicked"
                android:stateListAnimator="@null"
                android:text="1" />

            <Button
                style="@style/gameButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button2"
                android:onClick="gameButtonClicked"
                android:stateListAnimator="@null"
                android:text="2" />

            <Button
                style="@style/gameButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button3"
                android:onClick="gameButtonClicked"
                android:stateListAnimator="@null"
                android:text="3" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                style="@style/gameButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button4"
                android:onClick="gameButtonClicked"
                android:stateListAnimator="@null"
                android:text="4" />

            <Button
                style="@style/gameButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button5"
                android:onClick="gameButtonClicked"
                android:stateListAnimator="@null"
                android:text="5" />

            <Button
                style="@style/gameButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button6"
                android:onClick="gameButtonClicked"
                android:stateListAnimator="@null"
                android:text="6" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                style="@style/gameButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button7"
                android:onClick="gameButtonClicked"
                android:stateListAnimator="@null"
                android:text="7" />

            <Button
                style="@style/gameButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button8"
                android:onClick="gameButtonClicked"
                android:stateListAnimator="@null"
                android:text="8" />

            <Button
                style="@style/gameButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button9"
                android:onClick="gameButtonClicked"
                android:stateListAnimator="@null"
                android:text="9" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                style="@style/gameButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button0"
                android:onClick="gameButtonClicked"
                android:stateListAnimator="@null"
                android:text="0" />

            <Button
                android:id="@+id/approveGuessButton"
                style="@style/gameButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/approve_button"
                android:onClick="gameButtonClicked"
                android:stateListAnimator="@null"
                android:text="@string/approve_button"/>

        </LinearLayout>
    </LinearLayout>

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/start_margin_layout"
        android:layout_marginStart="@dimen/start_margin_layout"
        android:layout_marginEnd="@dimen/end_margin_layout"
        android:layout_marginRight="@dimen/end_margin_layout"
        android:name="com.example.first.kaganmoshe.brainy.GraphFragment"
        android:id="@+id/fragment"
        android:layout_weight="3"/>
</LinearLayout>
