<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_sky_and_green_grass_new"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="10"
    tools:context="com.example.first.kaganmoshe.brainy.GuessTheNumber.GuessTheNumberConfigActivity">

    <TextView
        android:id="@+id/configTitle"
        style="@style/feedbackActivityTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="Guess The Number" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rangeSelectionView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="15dp"
            android:text="@string/range_selection"
            android:textSize="25dp" />

        <SeekBar
            android:id="@+id/rangeSeekBar"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/rangeSelectionView"
            android:layout_toRightOf="@+id/rangeSelectionView"
            android:max="4"
            android:progress="0" />

        <TextView
            android:id="@+id/rangeValueText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/rangeSeekBar"
            android:layout_toEndOf="@+id/rangeSeekBar"
            android:layout_toRightOf="@+id/rangeSeekBar"
            android:text="@string/default_range_value"
            android:textSize="25dp" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/pad_30dp"
        android:layout_marginRight="@dimen/pad_30dp"
        android:layout_marginTop="@dimen/pad_30dp"
        android:layout_weight="7" />

    <Button
        android:id="@+id/startButton"
        style="@style/btn_white_large"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/pad_30dp"
        android:layout_marginRight="@dimen/pad_30dp"
        android:layout_marginStart="@dimen/pad_30dp"
        android:layout_marginTop="@dimen/pad_15dp"
        android:background="@drawable/ic_play_button" />

</LinearLayout>
