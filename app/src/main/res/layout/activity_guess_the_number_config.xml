<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="40dp"
    android:paddingStart="@dimen/pad_30dp"
    android:paddingEnd="@dimen/pad_30dp"
    android:paddingBottom="16dp"
    android:weightSum="16"
    tools:context=".GuessTheNumberConfigActivity">

    <!--android:background="@drawable/background"-->
    <com.example.first.kaganmoshe.brainy.CustomActivity.AppTextView
        android:id="@+id/configTitle"
        style="@style/feedbackActivityTitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="Guess The Number"
        android:gravity="center_horizontal" />

    <include
        layout="@layout/layout_sessions_amount"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="start"
        android:layout_weight="5"
        android:orientation="vertical">

        <com.example.first.kaganmoshe.brainy.CustomActivity.AppTextView
            android:id="@+id/rangeSelectionView"
            style="@style/configActivityText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/range_selection"
            android:paddingBottom="@dimen/pad_15dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:orientation="horizontal">

            <SeekBar
                android:id="@+id/rangeSeekBar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/pad_15dp"
                android:progress="0" />

            <com.example.first.kaganmoshe.brainy.CustomActivity.AppTextView
                android:id="@+id/rangeValueText"
                style="@style/configActivityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100" />

        </LinearLayout>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5" />

    <include
        layout="@layout/layout_play_config_button"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>


