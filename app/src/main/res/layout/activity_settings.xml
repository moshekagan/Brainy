<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.first.kaganmoshe.brainy.SettingsActivity"
    android:id="@+id/settingsActivity">

    <TextView android:text="@string/settings" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TitleTextView"
        android:textSize="24dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/connect_to_head_set"
        android:id="@+id/connectToHeadSetCheckBox"
        android:layout_marginTop="42dp"
        android:checked="true"
        android:layout_below="@+id/TitleTextView"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Choose HeadSet:"
        android:id="@+id/ChooseHeadSetTextView"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/connectToHeadSetCheckBox"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mind Wave Mobile"
        android:id="@+id/MindWaveRadioButton"
        android:checked="true"
        android:layout_below="@+id/ChooseHeadSetTextView"
        android:layout_alignEnd="@+id/connectToHeadSetCheckBox" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emotiv EPOC+"
        android:id="@+id/EmotivRadioButton"
        android:layout_below="@+id/MindWaveRadioButton"
        android:layout_alignStart="@+id/MindWaveRadioButton"
        android:checked="false" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_below="@+id/ChooseHeadSetTextView"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_mind_wave_mobile" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="(Unsupprted Yet)"
        android:id="@+id/UnsupportedTextView"
        android:layout_below="@+id/EmotivRadioButton"
        android:layout_alignEnd="@+id/ChooseHeadSetTextView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/EmotiveImageView"
        android:src="@drawable/ic_emotive"
        android:layout_below="@+id/imageView"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/doneBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
