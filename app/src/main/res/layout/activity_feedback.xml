<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/feedback_background"
    android:orientation="vertical"
    android:padding="@dimen/padding_feedback_layout"
    android:weightSum="22"
    tools:context="com.example.first.kaganmoshe.brainy.Feedback.FeedbackActivity">

    <TextView
        android:id="@+id/feedbackTitle"
        style="@style/feedbackActivityTitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center_horizontal"
        android:text="@string/feedback_activity_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/feedbackStatsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/feedbackStatLayoutWidth"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical">

                <TextView
                    style="@style/feedbackActivityTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/feedbackScoreView"
                    android:layout_marginEnd="@dimen/pad_5dp"/>

                <TextView
                    android:id="@+id/feedbackScoreViewText"
                    style="@style/feedbackActivityTextViewText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=""
                    android:gravity="bottom"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/feedbackStatLayoutWidth"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical">

                <TextView
                    style="@style/feedbackActivityTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/feedbackTimeView"
                    android:layout_marginEnd="@dimen/pad_5dp"/>

                <TextView
                    android:id="@+id/feedbackTimeViewText"
                    style="@style/feedbackActivityTextViewText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=""
                    android:gravity="bottom" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <com.jjoe64.graphview.GraphView

        android:id="@+id/graph"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="13"
        android:paddingBottom="10dp" />
    <!--android:layout_marginLeft="@dimen/start_margin_feedback_layout"-->
    <!--android:layout_marginStart="@dimen/start_margin_feedback_layout"-->
    <!--android:layout_marginEnd="@dimen/end_margin_feedback_layout"-->
    <!--android:layout_marginRight="@dimen/end_margin_feedback_layout"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:paddingStart="@dimen/pad_10dp"
        android:paddingEnd="@dimen/pad_10dp"
        android:paddingTop="@dimen/padding_feedback_layout"
        android:weightSum="12">
        <!--android:layout_marginLeft="@dimen/start_margin_feedback_layout"-->
        <!--android:layout_marginStart="@dimen/start_margin_feedback_layout"-->
        <!--android:layout_marginEnd="@dimen/end_margin_feedback_layout"-->
        <!--android:layout_marginRight="@dimen/end_margin_feedback_layout"-->

        <Button
            android:id="@+id/backFeedbackButton"
            style="@style/dialogButtonText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="@drawable/winner_dialog_button"
            android:stateListAnimator="@null"
            android:text="@string/winner_dialog_back" />

        <android.widget.Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />

        <Button
            android:id="@+id/playAgainFeedbackButton"
            style="@style/dialogButtonText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="@drawable/winner_dialog_button"
            android:stateListAnimator="@null"
            android:text="@string/winner_dialog_play_again" />


    </LinearLayout>


</LinearLayout>
